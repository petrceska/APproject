<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FirstFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="27dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="34dp" />

    <TextView
        android:id="@+id/temp_ID"
        style="?android:attr/progressBarStyle"
        android:layout_width="63dp"
        android:layout_height="66dp"
        android:hint="19"
        android:progress="25"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/Location_ID" />

    <TextView
        android:id="@+id/Location_ID"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <TextView
        android:id="@+id/date_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Day and Date"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/temp_ID" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/drizzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sunshine"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    //TODO fix Layout...
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundstyle"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/humidity_ID"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text="78%\nHumidity"
            android:layout_weight="1"/>


        <View
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:text="11km\nVisibility"
            />

        <View
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"

            android:background="@android:color/black" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:text="This is line 1\nRandom"
            android:layout_weight="1"
            />


    </LinearLayout>

    <com.example.weatherapp.view.CustomSwipeView
        android:id="@+id/swipeHandlerView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>